doctype html
html(lang='en', ng-app='skokovModule')
    head
        title skokov
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css',
        integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
        link(rel='stylesheet', href='/static/stylesheets/style.css')

    body
        .home#home_top(ng-controller='mainCtrl')
            include ./templates/modal
            .home-page(ng-class='modalIsVisible ? "active-modal" : ""')
                .container.home-page
                    .navbar-header.header
                        a(href='#').logo
                            img(src='/static/images/logo.png')
                    nav.navbar-collapse
                        ul.nav.navbar-nav.navbar-right.nav-links
                            li
                                a.nav-link(href='#') home
                            li
                                a.nav-link(href='#') portfolio
                            li
                                a.nav-link(href='#') blog
                            li
                                a.nav-link(href='#') about as
                            li
                                a.nav-link(href='#') contact
                    .row.top-img
                        .project
                            p.text-center.project-txt project
                    .row.project-content
                        .col-sm-8
                            .row.description-container
                                .description
                                    .route-img-block#slides
                                        .route-btn-block
                                            button.route-btn(ng-click='showPrevious();')
                                                img(src='/static/images/left-arrow.png')
                                        .active-img-block
                                            .animation-fade.selected-img-block(ng-repeat='(i, slide) in slides', ng-show='i == slideIndex')
                                                img.selected-img(ng-src='{{ slide.image }}')
                                        .route-btn-block
                                            .open-modal-icon(ng-click='openModal();')
                                                img(src='/static/images/resize-icon.png')
                                            button.route-btn(ng-click='showNext();')
                                                img(src='/static/images/right-arrow.png')
                                    .select-imgs
                                        ul.text-center.slide-list
                                            li.slide(ng-repeat='(i, slide) in slides', ng-class='slideIndex == this.$index ? "active" : "" ')
                                                img.elem-img(ng-src='{{ slide.image }}', ng-click='showImg();')
