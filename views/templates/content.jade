.row.project-content
    .col-sm-8
        .row.description-container
            .description
                .route-img-block#slides
                    .route-btn-block
                        button.route-btn(ng-click='showPrevious();')
                            img(src='/static/images/left-arrow.png')
                    .active-img-block
                        .animation-fade.selected-img-block(ng-repeat='(i, slide) in slides', ng-show='i == slideIndex')
                            img.selected-img(ng-src='{{ slide.image }}')
                    .route-btn-block
                        .open-modal-icon(ng-click='openModal();')
                            img(src='/static/images/resize-icon.png')
                        button.route-btn(ng-click='showNext();')
                            img(src='/static/images/right-arrow.png')
                .select-imgs
                    ul.text-center.slide-list
                        li.slide(ng-repeat='(i, slide) in slides', ng-class='slideIndex == this.$index ? "active" : "" ')
                            img.elem-img(ng-src='{{ slide.image }}', ng-click='showImg();')
